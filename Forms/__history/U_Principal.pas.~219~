procedure TFrm_Principal.StatusBar1DrawPanel(StatusBar: TStatusBar;
  Panel: TStatusPanel; const Rect: TRect);
begin
 with StatusBar.Canvas do
  begin
   case Panel.Index of
   0: // Primeiro Panel
    begin
     Font.Color := clRed;
     Font.Style := [fsBold];
    end;
  end;
 end;
end;

