procedure TFrm_Principal.bt_fecharClick(Sender: TObject);
begin
 // Fecha a aplicação
  if Messagedlg('Deseja sair do sistema?',mtConfirmation,[mbOk,mbNo],0)=mrOk then
     begin
       application.Terminate;
     end
     else
     abort;
end;


